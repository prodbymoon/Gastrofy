{
  "name": "haltbarkeits-label-generator",
  "version": "1.0.0",
  "description": "Haltbarkeits-Label Generator f√ºr GL2120TJ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-win32": "electron-builder --win --ia32",
    "build-win64": "electron-builder --win --x64",
    "build-portable": "electron-builder --win --x64 --config.win.target=portable",
    "build-all": "npm run build-win32 && npm run build-win64 && npm run build-portable",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm install && npm run build",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.restaurant.labelgenerator",
    "productName": "Label Generator",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Label Generator",
      "icon": "assets/icon.icns"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "package.json"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
